<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
android:id="@+id/main_one"
    android:background="@color/yellow"
    >

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="410dp"
            android:layout_height="730dp"
            android:scaleType="fitXY"
            android:src="@drawable/bgapp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toTopOf="parent" />


    </LinearLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="340dp"
        android:src="@drawable/clover"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:alpha="0.7"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/new_shiftButton"
        android:layout_width="300dp"
        android:layout_height="2dp"
        android:background="@color/yellow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <View
        android:alpha="0.7"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/viewMyNotes"
        android:layout_width="300dp"
        android:layout_height="2dp"
        android:background="@color/yellow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button

        android:id="@+id/new_shiftButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="New Shift"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="260dp"
        android:padding="15dp"




        />

    <Button
        android:id="@+id/viewMyNotes"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="create Notes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/new_shiftButton"
        android:layout_marginTop="40dp"
        android:padding="15dp"



        />

    <Button
        android:id="@+id/overview_fragmentBtn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="View Shifts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewMyNotes"
        android:layout_marginTop="40dp"
        android:padding="15dp"

        />


